<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="140.0" prefWidth="331.0" xmlns="http://javafx.com/javafx/18"
            fx:controller="it.polimi.ingsw.mvc.view.GUI.controllers.UsernameAndDeckLobbyViewController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Choose Username and Deck"/>
      <Pane fx:id="deckPane" disable="true" layoutX="-2.0" layoutY="83.0" prefHeight="44.0" prefWidth="331.0">
         <children>
            <Label layoutX="14.0" layoutY="14.0" text="Deck:"/>
            <ComboBox fx:id="deckComboBox" layoutX="91.0" layoutY="10.0" prefWidth="150.0"/>
            <Button fx:id="deckButton" layoutX="251.0" layoutY="10.0" mnemonicParsing="false"
                    onAction="#deckButtonOnAction" text="Confirm"/>
         </children>
      </Pane>
      <Pane fx:id="userPane" layoutY="36.0" prefHeight="44.0" prefWidth="331.0">
         <children>
            <TextField fx:id="userText" layoutX="91.0" layoutY="10.0"/>
            <Button fx:id="userButton" layoutX="247.0" layoutY="10.0" mnemonicParsing="false"
                    onAction="#userButtonOnAction" text="Confirm"/>
            <Label layoutX="14.0" layoutY="17.0" text="Username:"/>
         </children>
      </Pane>
   </children>
</AnchorPane>
